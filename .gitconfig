[user]
        name = xzpeter
        email = xzpeter@gmail.com
[alias]
        lo = log --color --stat --summary --relative-date
        ci = commit
        co = checkout
        st = status
        di = diff --color
        br = branch --color
[core]
        editor = emacsclient -a emacs
[merge]
        tool = meld

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = cyan
